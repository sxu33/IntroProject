<!-- app/views/animes/index.html.erb -->
<h1 class="text-2xl font-bold mb-4">Anime List</h1>
<table class="min-w-full bg-white border">
  <thead class="bg-gray-800 text-white">
    <tr>
      <th class="w-1/4 py-2 px-4">ID</th>
      <th class="w-1/2 py-2 px-4">Title</th>
      <th class="w-1/4 py-2 px-4">Details</th>
    </tr>
  </thead>
  <tbody class="text-gray-700">
    <% @animes.each do |anime| %>
      <tr class="border-b">
        <td class="py-2 px-4"><%= anime.id %></td>
        <td class="py-2 px-4"><%= anime.title %></td>
        <td class="py-2 px-4">
          <%= link_to 'View Details', anime_path(anime), class: "text-blue-500 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
